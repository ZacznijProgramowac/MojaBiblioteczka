<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox maxHeight="1.7976931348623157E308" maxWidth="-Infinity" prefWidth="1000.0" xmlns="http://javafx.com/javafx/8.0.60" xmlns:fx="http://javafx.com/fxml/1" fx:controller="pl.moja.biblioteczka.controllers.AuthorController">
   <children>
      <HBox alignment="CENTER" spacing="20.0">
         <children>
            <Label text="%name.author" />
            <TextField fx:id="nameTextField" />
            <Label text="%surname.author" />
            <TextField fx:id="surnameTextField" />
            <Button fx:id="addButton" mnemonicParsing="false" onAction="#addAuthorOnAction" text="%add.button" />
         </children>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
      </HBox>
      <TableView fx:id="authorTableView" editable="true" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" tableMenuButtonVisible="true">
        <columns>
          <TableColumn fx:id="nameColumn" maxWidth="500.0" minWidth="-1.0" onEditCommit="#onEditCommitName" prefWidth="300.0" text="%name.author" />
          <TableColumn fx:id="surnameColumn" maxWidth="500.0" minWidth="-1.0" onEditCommit="#onEditCommitSurname" prefWidth="298.0" text="%surname.author" />
        </columns>
         <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
         </columnResizePolicy>
      </TableView>
   </children>
</VBox>
